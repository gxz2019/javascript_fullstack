.search{
  width: 100%;
  height: 65rpx;
  position: relative;
  background-color: #008c8c;
  line-height: 65rpx;
  box-sizing: border-box
}
.search-bar{
  position: relative;
  display: inline-block;
  /* border: 1px solid black; */
  background-color: #fff;
  border-radius: 20px;
  vertical-align: middle;
  opacity: 0.6;
  margin: 5rpx;
  height: 54rpx;
  width: 80%;
  line-height: 27px
}
input{
  position: absolute;
  left: 20rpx
}
text{
  position: absolute;
  right: 20rpx
}
.search-button{
  position: absolute;
  top: 0rpx;
  right: 45rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
  text-align: center;
}
.result-div{
  display: inline-block;
  border: 1px solid #008c8c;
  border-radius: 20px;
  margin: 20rpx;
  /* padding: 5px; */
  height: 25px;
  line-height: 25px;
  
}
.hot-image{
  display: inline-block;
  width: 16px;
  height: 16px;
}
image{
  width: 100%;
  height: 100%;
}
.hot-title{
  display: inline-block;
}
