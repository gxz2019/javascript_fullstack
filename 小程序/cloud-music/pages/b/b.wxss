} */
.radio-title{
  width: 100%;
  text-align: center;
}
.title-1{
  color: #ffffff;
}
.title-2{ 
  color: #ffffff;
  font-size: 28rpx;
}
.background2{
  width: 100%;
  height: 850rpx;
  position: relative;
  
}
.circle{
  animation: second 5s infinite;
  border-radius: 100%;
  position: absolute;
  margin: auto;
  right: 0;left: 0;bottom: 0;top: 0;
  backface-visibility: hidden; 
}
@keyframes second{
  0%{
    width: 510rpx;
    height: 510rpx;
    border: 1px solid rgba(0, 141, 188, 1)
  }
  25%{
    width: 610rpx;
    height: 610rpx;
    border: 1px solid rgba(0, 141, 188, 0.8)
  }
  50%{
    width: 700rpx;
    height: 700rpx;
    border: 1px solid rgba(0, 141, 188, 0.6)
  }
  75%{
    width: 750rpx;
    height: 750rpx;
    border: 1px solid rgba(0, 141, 188, 0.4)
  }
  99%{
    width: 600rpx;
    height: 600rpx;
    border: 1px solid rgba(0, 141, 188, 0.1)
  }
  100%{
    width: 610rpx;
    height: 610rpx;
    border: 1px solid rgba(0, 141, 188, 0)
  }
}
.bg-img{
  width: 500rpx;
  height: 500rpx;
  /* border: 1px solid #000; */
  /* border-radius: 100%; */
  position: absolute;
  margin: auto;
  right: 0;left: 0;bottom: 0;top: 0;
  animation: first 15s infinite;
  backface-visibility: hidden;
}
@keyframes first{
  0%{
    transform: rotateZ(0deg);
  }
  100%{
    transform: rotateZ(360deg);
  }
}
.song-img{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.btn{
  display: flex;
}
