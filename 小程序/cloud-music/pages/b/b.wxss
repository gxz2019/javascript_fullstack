.radio{
  width: 100%;
  height: 1500rpx;
  
}
.background {
  filter: blur(15px);
  transform: scale(1.5);
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
}
.content {
  position: relative;
  z-index: 2;
}
/* .radio::before{
  content: '';
