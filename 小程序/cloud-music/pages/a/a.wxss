body {
  margin: 0;
  padding: 0;
}

.search-bar {
  background-color: #ff3030;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  border-top: none
  
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 70%;
  height: 60rpx;
  background-color: whitesmoke;
  border: 1rpx solid whitesmoke;
  border-radius: 40rpx;
}

/* 搜索框提示文字样式 */

.search input {
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

